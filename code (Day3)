#include<bits/stdc++.h>
using namespace std;
int main(){
    long long Test;
    cin >> Test;
    while(Test--){
        // Code Write Here
        int x, y, z;
        cin >> x >> y >> z;
        if(x <= 3){
            cout << x*y << "\n";
        }
        else{
            if(x%3==0){
                cout << ((x*y)+((x/3)-1)*z) <<"\n";
            }
            else{
                cout << ((x*y) + (x/3)*z) << "\n";
            }
        }
    }
    return 0;
}
