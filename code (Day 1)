#include <iostream>

using namespace std;

int main() {
  int t;
  cin>>t;
  while(t--)
  {
      int n,x;
      cin>>n>>x;
      int a=n-x;
      if(a<0)
      {
          cout<<"0"<<endl;
      }
      else
      {
          int b=a/4;
          if(a%4>0)
          {
              cout<<b+1<<endl;
          }
          else{
              cout<<b<<endl;
          }
          
      }
  }
}
