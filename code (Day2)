#include <iostream>
using namespace std;

int main() {
	int t;
	cin>>t;
	for(int i=0;i<t;i++){
	    int x,y,z;
	    cin>>x>>y>>z;
	    int a = x/y;
	    int b = x%y;
	    int c = (a+1)*z;
	    int d = a*z;
	    if(x<y){
	        cout<<z<<endl;
	    }
	    else if(b==0){
	        cout<<d<<endl;
	    }
	    else{
	        cout<<c<<endl;
	    }
	}
	return 0;
}
