# ACC45DAYSOFCODE
#include <bits/stdc++.h>
using namespace std;

int main() {
	int n;
	cin>>n;
	while(n--){
	       long long ans=0;
	       int a,b,c,t;
	       cin>>a>>b>>c;
	 while(a--){
	        if(c==0) break;
	        else if(c>=b){
	               c=c-b;
	               ans=ans+pow(b,2);
	        }
	        else if(c<b)
{              ans=ans+pow(c,2);
               c=0;
       
}	 }   

cout<<ans<<endl;
	}
	return 0;
}
