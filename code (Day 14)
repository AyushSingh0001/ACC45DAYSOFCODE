# ACC45DAYSOFCODE
#include <iostream>
using namespace std;

int main() {
    int t;
    cin>>t;
    while(t--)
    {
        int x,y,z;
        cin>>x>>y>>z;
        if(y<=z)
        {
            cout<<x<<endl;}
            else 
            {
                if(y%z ==0)
                {
                    cout<<(x*(y/z))<<endl;
                }else
                {
                    int p = y/z;
                p++;
                cout<<x*p<<endl;
                }
                
            }
    }
	return 0;
}
