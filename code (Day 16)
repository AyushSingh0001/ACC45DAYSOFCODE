# ACC45DAYSOFCODE
#include <iostream>
using namespace std;


int recursion(int x,int y){
        if(x==0){
                return 0;
                
        }
        return (1+y==x);
}
int main() {
int t;
	cin>>t;
	while(t--){
	        int x,y;
	        cin>>x>>y;
	        
	    if(x<y){
	            cout<<x<<endl;
	            
	    }
	    else{
	            cout<<(x/y)+(x%y)<<endl;
	    }
	    }
	return 0;
}
